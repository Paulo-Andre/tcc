<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_principal"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/tolkbar"
        layout="@layout/tolkbar"
        android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar"
        android:visibility="visible"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"></include>
    <android.support.v4.view.ViewPager
        android:id="@+id/View_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <com.example.paulo.tcc.recursos.SlidingTabLayout
        android:id="@+id/Sliding_Tab_Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="8dp"
        android:background="@color/tolkbar"/>


</LinearLayout>